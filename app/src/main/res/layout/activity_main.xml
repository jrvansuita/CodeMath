<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- TextView to display what calculation is being done -->
    <TextView
        android:id="@+id/calculationInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Multiplying the two numbers"
        android:textSize="16sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"/>

    <!-- First EditText for user input -->
    <EditText
        android:id="@+id/inputField1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter first value"
        android:inputType="numberDecimal"
        android:layout_below="@id/calculationInfo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"/>

    <!-- Second EditText for user input -->
    <EditText
        android:id="@+id/inputField2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter second value"
        android:inputType="numberDecimal"
        android:layout_below="@id/inputField1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <!-- Button to trigger calculation -->
    <Button
        android:id="@+id/calculateButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate"
        android:layout_below="@id/inputField2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <!-- TextView to display the result -->
    <TextView
        android:id="@+id/resultView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Result"
        android:textSize="18sp"
        android:layout_below="@id/calculateButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>
</RelativeLayout>
